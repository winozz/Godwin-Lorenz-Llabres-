//1. Given an array and a value Y, count and print the number of array values greater than Y.

function  arr(array){
  var count = 0;
  var y = 10 
  for(var i=0; i < array.length; i++) {
        
        if ( array[i] > y) {
            count+=1;  
        } 
        
  }
  return count;

}
x = arr([12, 2, 23, 10, 12]) ;
console.log("Number of array index greater than  Y: ", x);

