// 1) Analyze an arrayâ€™s values and return the average of its values.

function printAverage(x){
   sum = 0;
   var average;
   for ( var i = 0; i < x.length; i++ ) {
        sum += x[i];
        
        average = sum / x.length;
   }
   return average;
}
displayAverage = printAverage([1,2,3]);
console.log('Average of values inside the array: ',displayAverage); // should log 2
  
displayAverage = printAverage([2,5,8]);
console.log('Average of values inside the array: ',displayAverage); // should log 5



// 2) Create an array with all the odd integers between 1 and 255 (inclusive)

function returnOddArray(){
   var arr= [];
   for ( var i = 1; i <= 255; i+=2){
        arr.push(i);
    } return arr;    
}

displayArray = returnOddArray();

console.log('Array of odd numbers from 1-255', displayArray ); // should log [1,3,5,...,253,255]


// 3) Square each value in a given array, returning that same array with changed values.

function squareValue(x){


   for ( var i= 0; i < x.length; i++ ) {
     x[i] = x[i] *x[i];
   
   }
   return x;
}
displaySquared = squareValue([1,2,3]);

console.log('Squared value inside the array: ', displaySquared); // should log [1,4,9]
  
displaySquared = squareValue([2,5,8]);
console.log('Squared value inside the array: ', displaySquared);  // should log [4,25,64]


